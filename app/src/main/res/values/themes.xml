<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CatSearchApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <!-- Region Cat Breeds List Style -->
    <style name="CatBreed" />

    <style name="CatBreed.View">
        <item name="android:layout_marginTop">@dimen/normal_padding</item>
        <item name="android:layout_marginBottom">@dimen/card_elevation</item>
    </style>

    <style name="CatBreed.Temperament">
        <item name="android:maxLines">1</item>
        <item name="android:padding">@dimen/normal_padding</item>
        <item name="android:textColor">@color/purple_500</item>
        <item name="android:textSize">@dimen/textview_size_normal</item>
    </style>

    <style name="CatBreed.Image">
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="CatBreed.Name">
        <item name="android:background">@color/color_transparent</item>
        <item name="android:maxLines">1</item>
        <item name="android:padding">@dimen/normal_padding</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/textview_size_normal</item>
    </style>

    <style name="CatBreed.WikiLink">
        <item name="android:padding">@dimen/normal_padding</item>
        <item name="android:textColor">@color/teal_700</item>
        <item name="android:textSize">@dimen/textview_size_medium</item>
    </style>
</resources>